---
interface Props {
  page?: boolean;
}
const { page } = Astro.props;
import Menu from './Menu.astro';
import Logo from '@/components/icons/Logo.astro';
import Menu1 from './Menu1.astro';
---

<header
  class={`absolute top-0 left-0 z-50 w-full h-[75px] lg:h-[5.78vw] px-6 lg:pl-[4.57vw] lg:pr-0 border-b  ${
    page ? 'text-[#5A4C4C]' : 'text-header'
  } border-current flex items-center justify-between`}
  id="Header"
>
  <a href={`${page ? '/' : '#Home'}`} class="w-[150px]">
    <Logo />
  </a>
  {page ? <Menu1 /> : <Menu />}
</header>
<style>
  .sticky {
    @apply fixed w-full top-0 left-0;
    &.bg {
      @apply bg-bgWhite text-text;
    }
  }
</style>
