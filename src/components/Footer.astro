---
import Logo from './icons/Logo.astro';
---

<footer
  class="bg-[#2E3B46] px-5 pt-16 lg:pt-[11.5vw] pb-20 lg:pb-[8.5vw] lg:px-[7.812vw] text-[#FEFCF6]"
  id="contact"
>
