---
import Header from '@/components/Header.astro';
import Scroll from '@/components/Scroll.astro';
---

<section
  class="w-full h-[100dvh] relative flex flex-col justify-center items-center text-header"
  id="Home"
>
  <Header page={true} white={true} />
  <img
    src="/img/agave.webp"
    class="absolute w-full
    h-full
    object-cover
   scrollt-center z-0"
    -z-10
    alt="Land"
  />
  <h1
    class="text-center text-2xl md:text-[3.59375vw] tracking-[2px] md:racking-[5px] md:leading-[4.27vw] mb-8 md:mb-[4.21vw] italic uppercase z-50"
  >
    Our Process
  </h1>

  <Scroll id="next" href="#about-us" className="bottom-8 lg:bottom-16" />
</section>
<style lang="scss">
  p {
    &::after {
      @apply content-[''] absolute block top-[150%] left-[50%] h-[38vh] w-[1px] bg-current;
    }
  }
</style>
