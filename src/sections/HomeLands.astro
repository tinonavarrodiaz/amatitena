---
import Scroll from '@components/Scroll.astro';
---

<section
  class="Home relative bg-[#EEECE2] w-full h-[100vh] flex flex-col justify-center items-center text-[#5A4C4C] text-center font-minion"
  id="Start"
>
  <h1
    class="text-center text-2xl md:text-[3.59375vw] tracking-[2px] md:racking-[5px] md:leading-[4.27vw] mb-8 md:mb-[4.21vw] italic uppercase"
  >
    Our Lands
  </h1>
  <Scroll id="next" href="#la-clinica" className="bottom-20 lg:bottom-16" />
</section>
<style lang="scss">
  .Home {
    span,
    h2 {
      @apply text-xl md:text-[1.789vw] leading-[1em] tracking-[2px] md:tracking-[3px];
    }
    span {
      @apply mb-4 md:mb-[1.56vw];
    }
    h2 {
      @apply uppercase;
    }
  }
</style>
<script>
  const section = document.getElementById('Start') as HTMLElement;
  const prev = section?.querySelector('.prev') as HTMLAnchorElement;
  const next = section?.querySelector('.next') as HTMLAnchorElement;
  section.addEventListener('wheel', (e) => {
    if (e.deltaY < 0) {
      prev?.click();
    } else {
      next?.click();
    }
  });

